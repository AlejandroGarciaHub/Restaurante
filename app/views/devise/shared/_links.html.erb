<%- if controller_name != 'sessions' %>
<div style="margin-bottom: 10%;">
  <%= link_to "Ingresar", new_session_path(resource_name) %><br />	
</div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div style="margin-bottom: 0%;">
  <%= link_to "Registrarse", new_registration_path(resource_name), style:"margin-bottom: 10%;" %><br />
</div>

<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div style="margin-bottom: 10%;">
  <%= link_to "多Olvidase tu contrase単a?", new_password_path(resource_name) %><br />
</div>

<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div style="margin-bottom: 10%;">
  <%= link_to "多No recibiste ningunas instrucciones de confirmacion?", new_confirmation_path(resource_name) %><br />
</div>

<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<div style="margin-bottom: 10%;">
  <%= link_to "多No recibiste ningun correo de desbloqueo?", new_unlock_path(resource_name) %><br />
</div>

<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
<div style="margin-bottom: 10%;">
    <%= link_to "Iniciar sesion con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
</div>

  <% end -%>
<% end -%>