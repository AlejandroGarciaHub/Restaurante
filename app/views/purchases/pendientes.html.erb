<div class="top-formulario row center-xs text-center">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
 <% if current_user.try(:admin?)%> 
<h1>Ordenes pendientes: <%=@purchases_pendientes.size%></h1>

<table>
  <thead>
    <tr>
      <th>Mesa</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases_pendientes.each do |purchase| %>
      <tr>
        <td><%= purchase.mesa %></td>
        <td><%= link_to 'Ver', purchase %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<h1>Ordenes listas en cocina para entregar: <%=@purchases_listas.size%></h1>

<table>
  <thead>
    <tr>
      <th>Mesa</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases_listas.each do |purchase| %>
      <tr>
        <td><%= purchase.mesa %></td>
        <td><%= link_to 'Ver', purchase %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
</div>
</div>